<div class="web-article">
    <div class="web-article-container">
        <div class="web-article-view">
            <div class="article-baseinfo">
                <h2><%= page.title %></h2>
                <div class="other-info">
                    <span>发布时间：<%= date(page.date) %></span>
                    <span>作者：<%= page.author %></span>
                    <% if(config.leancloud_visitors.enable){ %>
                        <span>
                            阅读量：<i id="<%= url_for(page.path) %>" class="leancloud_visitors" data-flag-title="<%- page.title %>">-</i> 次
                        </span>
                    <% } %>
                    <%
                        let time = symbolsTime(page.content);
                        time = (time||'').split(' ')[0] || '';
                    %>
                    <span>本文字数：<%= symbolsCount(page.content) %></span>
                    <span>阅读时长 ≈ <%= time %> 分钟</span>
                </div>
            </div>
            <%- page.content %>
        </div>
    </div>
    
</div>